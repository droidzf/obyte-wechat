page{
  background-color: #363c4a;
}

.qrcontainer{
  margin-left: auto;
  margin-right:auto;
  margin-top:60px;
  background-color: #3e88c4;
  height:700rpx;
  width:660rpx;
  border-radius: 12px;
}

.qrcontainer .logo
{
  text-align: center;
}
.qrcontainer .logo image{
  border-radius: 50%;
  border:3px solid #fff;
  width:50px;
  height:50px;
  margin-top:-25px;
  z-index: 9;
}

.qrcontainer .topbanner{
  color: #555555;
  height:100rpx;
  width:100%;
}
.qrcontainer .topbanner .assetname{
  color:#fff;
  font-size: medium;
  text-align: center;
  line-height: 1.6em;
  font-weight: bold;
}
.qrcontainer .topbanner .address{
  text-align: center;
  color:#fff;
  font-size: x-small;
  display: inline-flex;
  justify-content:center;
  width:100%;
}

.qrcontainer .topbanner .address .iconcopy{
  width:16px;
  height:16px;
  margin-left:2px;
}

.qrcontainer .qrbox{
  background-color:#fff;
  width:100%;
  border-radius: 0px 0px 12px 12px;
}

.qrcontainer .qrbox .tipscan{
  font-size: medium;
  color: #172838;
  text-align: center;
  line-height: 1.6em;
  padding-top:20px;
}
.qrcontainer .qrbox .imgbox{
  margin-left: auto;
  margin-right:auto;
  text-align: center;
}
.qrcontainer .qrbox .imgbox image{
  width:400rpx;
  height: 400rpx;
  text-align: center;
}

.qrcontainer .qrbox .gatheringMoney{
  line-height: 1.6em;
  font-size: small;
  color: #3e88c4;
  text-align: center;
}

.qrcontainer .qrbox .setmoney
{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding-bottom: 10px;
}

.qrcontainer .qrbox .setmoney .setmoney__item{
    -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  padding:10px;
    line-height: 1.6em;
  font-size: small;
  color: #3e88c4;
}
