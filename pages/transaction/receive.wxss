/* pages/transaction/receive.wxss */
page {
  background-color: #f5f6f7;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.qrcodeImg_box {
  width: 550rpx;
  height: 550rpx;
  margin: auto;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  justify-content: center;
}
.qrcodeImg_box image {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50rpx;
}

/*弹窗  */
.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

/*content*/

.drawer_box {
    width: 600rpx;
    overflow: hidden;
    position: fixed;
    z-index: 1001;
    background: #fafafa;
    border-radius: 13px;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.drawer_title {
    padding: 15px;
    /* font: 20px "microsoft yahei"; */
    text-align: center;
    color: #0a5258;
}

.drawer_content {
    height: 250rpx;
    overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.fan{
    width: 400rpx;
    height: 80rpx;
    background: #fff;
    padding-left: 20rpx;
    border-radius: 15rpx;
    margin: 0px auto;
    font-size: 30rpx; 
    border: 1rpx solid #ddd;
}
.back_btn{
    width: 250rpx;
    background: #1d61a5;
    height: 100rpx;
    margin-top: 20rpx;
    color: #fff;
    
}
.content {
  margin: 30rpx auto;
  width: 640rpx;
  height: 80%; 
  background-color: #269FD6;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #fff;
  padding: 30rpx;
  position: relative;
  box-shadow: 10rpx 10rpx 5px #ccc;
}
.gatheringAddress_box {
  font-size: 26rpx;
