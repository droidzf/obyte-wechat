<!--pages/prem/import.wxml-->


<view class='page'>
  <view class='page__hd'>
    <view class='weui-flex'>
      <view class='pagelogo'>
        <image src="/images/icons/redenvelope.png" />
      </view>
      <view>
        <view class='title'>导入纸红包</view>
        <view class='subtitle'>纸红包是由12个英文单词组成的密钥</view>
      </view>
    </view>
  </view>

  <!-- 内容部分 -->
  <view class="page__bd page__bd_spacing">
    <view class='content' >

      <view class='words'>
        <view class="weui-flex item-hd">
          <view class="weui-flex__item">纸红包密钥</view>
        </view>

        <view class="weui-flex item-bd">
          <view class="weui-flex__item color-gold">
            <textarea placeholder="请在此输入纸红包密钥" bindblur='bindTextAreaBlur' bindinput="bindTextAreaBlur" value="{{ textcoin }}"  focus="{{focus}}" />
          </view>
        </view>

      </view>

      <view class='tips'>导入成功之后纸红包中的资产将合并至你的obyte票夹账户</view>
      <view>
        <button class='btnImport'  bindtap='importTextcoin'>导入</button>
      </view>

    </view>



  </view>



</view>
